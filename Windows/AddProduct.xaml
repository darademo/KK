        <TextBlock Text="Скидка" HorizontalAlignment="Left" FontSize="20" FontFamily="Comic Sans MS" Margin="10,580,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="Кол-во на складе" HorizontalAlignment="Left" FontSize="20" FontFamily="Comic Sans MS" Margin="10,635,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="Поставщик" HorizontalAlignment="Left" FontSize="20" FontFamily="Comic Sans MS" Margin="10,690,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Сохранить" Background="LightGreen" FontSize="20" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="215,779,0,0" VerticalAlignment="Top" Width="130" Click="Save"/>
